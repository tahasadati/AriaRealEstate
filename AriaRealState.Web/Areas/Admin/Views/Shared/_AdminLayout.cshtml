@{
    var area = ViewContext.RouteData.Values["area"]?.ToString();
    var controller = ViewContext.RouteData.Values["controller"]?.ToString();
    var action = ViewContext.RouteData.Values["action"]?.ToString();

    bool IsActive(string a, string c, string ac = "Index")
        => string.Equals(area, a, StringComparison.OrdinalIgnoreCase)
        && string.Equals(controller, c, StringComparison.OrdinalIgnoreCase)
        && string.Equals(action, ac, StringComparison.OrdinalIgnoreCase);

    bool IsController(string a, string c)
        => string.Equals(area, a, StringComparison.OrdinalIgnoreCase)
        && string.Equals(controller, c, StringComparison.OrdinalIgnoreCase);
}

