    <!-- Header -->
    <div
      class="header-area bg-white dark:bg-[#0c1427] py-[13px] px-[20px] md:px-[25px] fixed top-0 z-[6] rounded-b-md transition-all"
      id="header-area"
    >
      <div class="md:flex md:items-center md:justify-between">
        <div class="flex items-center justify-center md:justify-normal">
          <div
            class="relative leading-none top-px ltr:mr-[13px] ltr:md:mr-[18px] ltr:lg:mr-[23px] rtl:ml-[13px] rtl:md:ml-[18px] rtl:lg:ml-[23px]"
          >
            <button
              type="button"
              class="hide-sidebar-toggle transition-all inline-block hover:text-primary-500"
              id="hide-sidebar-toggle"
            >
              <i class="material-symbols-outlined !text-[20px]"> menu </i>
            </button>
          </div>
        </div>
      </div>
    </div>
    <!-- End Header -->
    <!-- Main Content -->

    <div class="main-content transition-all flex flex-col overflow-hidden min-h-screen" id="main-content">
	@if (TempData["Success"] != null)
		{
			<div class="mx-6 my-3 p-3 bg-green-100 text-green-800 rounded-lg border border-green-300">
				@TempData["Success"]
			</div>
		}
		@if (TempData["Error"] != null)
		{
			<div class="mx-6 my-3 p-3 bg-red-100 text-red-800 rounded-lg border border-red-300">
				@TempData["Error"]
			</div>
		}
        @RenderBody()
   </div> 
   <!-- End Main Content -->
